<% if current_user %>
  Login As <%= current_user.email %>
  <%= link_to "Log out", log_out_path %>
<% else %>
  <%= link_to "Sign up", sign_up_path %> or   
  <%= link_to "Log in", log_in_path %>
<% end %>
<h1>List Of Articles</h1>
<%= flash[:notice] %>
<table class=list_articles>
  <tr>
    <td>Title</td>
    <td>Content</td>
    <td>Option</td>
  </tr>
  <% @articles.each do |article|%>
  <tr>
  <td><%= article.title %></td>
  <td><%= article.body %></td>
  <td><%= link_to 'Edit', edit_article_path(article.id) %> <%= link_to 'Delete', article_path(article.id), :confirm => 'Are you sure want to delete this item?', :method => :delete %>
  </tr>
  <% end %>
</table>

<p><%= link_to "Add new Article", new_article_path%></p>


